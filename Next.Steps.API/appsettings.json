{
  //"ConnectionString": "Data Source=DESKTOP-0GSQJ72\\SQLEXPRESS;Integrated Security=SSPI;Initial Catalog=NextSteps; User id=sa; password=Password123",
  "ConnectionString": "Server=.,5000;Database=NextSteps;User=sa;Password=Password123",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "NextSteps-{0:yyyy.MM}",
          "minimumLogEventLevel": "Debug"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "log\\NextSteps-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}